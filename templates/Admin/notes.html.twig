{% extends 'admin/base.html.twig' %}

{% block main %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        {% for note in notes %}
            <div class="note-card">
                <p class="note-p">{{ note.note }}/10</p>
                <p>Par {{ note.user.firstname }} {{ note.user.name }}</p>
                <p>Pour {{ note.product.name }}</p>
                <p>Le {{ note.date | date('d-m-y') }}</p>
            </div>
        {% endfor %}
        <div class="page">
            {{ knp_pagination_render(notes) }}
        </div>
    </div>



{% endblock %}