<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    {% block link %}{% endblock link %}
    <title>{% block metaTitle %}{% endblock metaTitle %}</title>

</head>
<body>

<header >
    <div class="header">
        <div class="w20">
            <a href="{{ path('admin_home') }}">
                Accueil{# <img class="w35" src="{{ asset('') }}"> #}
            </a>
        </div>
        <div class="search">
            <form action="{{ path('front_search') }}" class="form" method="get">
                <input class="input" type="search" placeholder="Rechercher..." name="q">
                <input type="submit" class="button" value="Rechercher">
            </form>
        </div>
        <div class="w40">
            <div class="categories">
                <a href="{{ path('admin_list_categories') }}">Catégories</a>
            </div>
            <div class="licences">
                <a href="{{  path('admin_list_licences') }}">Licences</a>
            </div>
            <div class="basket">
                <a href="{{ path('admin_list_product') }}">Produits</a>
            </div>
            <div class="log">
                <a href="{{ path('app_login') }}">{% if app.user %}
                        {{ app.user.firstname }} {{ app.user.name  }}
                        {% if app.user.media %}
                            <img src="{{ asset('img/media/' ~ app.user.media.src) }}" class="w10">
                        {% endif %}
                    {% endif %}
                    {% if app.user is null %}
                        Se connecter/S'inscrire
                    {% endif %}
                </a>
            </div>

        </div>
    </div>
</header>

<main class="main">
    {% block main %}
    {% endblock main %}
</main>

<footer >
    <div class="footer">
        <div class="admin-infos">
            <ul>
                <li>
                    <a href="#">Commandes</a>
                </li>
                <li>
                    <a href="#">Commentaires</a>
                </li>
                <li>
                    <a href="#">Notes</a>
                </li>
            </ul>
        </div>
        <div class="up">
            <a href="#top">Retour en haut</a>
        </div>
        <div class="admin-infos">
            <ul>
                <li><a href="{{ path('admin_list_product') }}">Produits</a></li>
                <li><a href="{{  path('front_list_licence') }}">Licences</a></li>
                <li><a href="{{ path('front_categories_list') }}">Catégories</a></li>
            </ul>
        </div>
    </div>
</footer>

<script>
    function myFunction() {
        setTimeout(function(){ document.querySelector(".flash-notice").style.display = "none";}, 5000)
    }
    myFunction();
</script>
</body>
</html>
