{% extends 'admin/base.html.twig' %}

{% block main %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        {% for licence in licences %}
            <div class="card br">
                <img src="{{ asset('img/media/' ~ licence.media) }}">
                <h2>
                    {{ licence.description }}
                </h2>
                <a href="{{ path('admin_delete_licence', {'id' : licence.id} ) }}" class="delete">Supprimer la licence</a>
                <a href="{{ path('admin_licence_update', {'id' : licence.id} ) }}" class="update">Modifier la licence</a>
            </div>
        {% endfor %}
        <div class="page">
            {{ knp_pagination_render(licences) }}
        </div>
    </div>

    <div class="add-product">
        <a href="{{ path('admin_licence_add') }}" class="add">Ajouter une licence</a>
    </div>

{% endblock %}