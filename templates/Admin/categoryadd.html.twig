{% extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Ajout ou modification de catégorie
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid1">
        <div class="row1 licence w95">
            <h1>Vous pouvez ajouter ou modifier une catégorie</h1>

            {{ form_start(categoryForm) }}
                {{ form_label(categoryForm.name, 'Nom de la catégorie :', {'label_attr' : {'class'  : 'input-product under'}}) }}
                {{ form_widget(categoryForm.name, {'attr' : {'class'  : 'input-product', 'placeholder' : 'Entrer le nom de la catégorie'}}) }}
                {{ form_label(categoryForm.description, 'Description de la catégorie :', {'label_attr' : {'class'  : 'input-product under'}}) }}
                {{ form_widget(categoryForm.description, {'attr' : {'class'  : 'input-product', 'placeholder' : 'Entrer la description de la catégorie'}} ) }}
                {{ form_label(categoryForm.media, 'Image de la catégorie :', {'label_attr' : {'class'  : 'input-product under'}}) }}
                {{ form_widget(categoryForm.media, {'attr' : {'class'  : 'input-product media-js', 'name' : 'media'}} ) }}
                {{ form_widget(categoryForm.submit, {'attr' : {'class'  : 'button-product', 'value' : 'Enregister'}} ) }}
            {{ form_end(categoryForm) }}
        </div>
    </div>
{% endblock main %}