{% extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Ajout d'image
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid1">
        <div class="row1 licence w95">
            <h1>Vous pouvez ajouter une image</h1>

            <form action="{{ path('admin_media_add_save') }}" method="post" class="form" enctype="multipart/form-data">
                <input type="text" name="title" class="input-product" placeholder="Entrer le titre de l'image" >
                <label class="label-media" for="fichier">Choisissez une image</label>
                <input type="file" name="image" id="fichier" placeholder="Votre image" class="file">
                <input type="submit" value="Ajouter" class="button-product">
            </form>
        </div>
    </div>
{% endblock main %}