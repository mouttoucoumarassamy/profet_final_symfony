{% extends 'front/base.html.twig' %}

{% block main %}
    <div class="container">
        <h2>Informations pour la livraison</h2>

        <form action="{{ path('info_command') }}" method="post">
            <div class="margin-top">
                <label for="name">Votre nom</label>
                <input type="text" id="name" name="name" class="input" {% if app.user %} value="{{ app.user.name}}"{% endif %}>
            </div>
            <div class="margin-top">
                <label for="firstname">Votre pr√©nom</label>
                <input type="text" id="firstname" name="firstname" class="input" {% if app.user %} value="{{ app.user.firstname}}"{% endif %}>
            </div>
            <div class="margin-top">
                <label for="email">Votre email</label>
                <input type="text" id="email" name="email" class="input" {% if app.user %} value="{{ app.user.email}}"{% endif %}>
            </div>
            <div class="margin-top">
                <label for="adress">Votre adresse</label>
                <input type="text" id="adress" name="adress" class="input" {% if app.user %} value="{{ app.user.adress}}"{% endif %}>
            </div>
            <div class="margin-top">
                <label for="city">Votre ville</label>
                <input type="text" id="city" name="city" class="input" {% if app.user %} value="{{ app.user.city}}"{% endif %}>
            </div>
            <div class="margin-top">
                <label for="zipcode">Votre code postal</label>
                <input type="text" id="zipcode" name="zipcode" class="input" {% if app.user %} value="{{ app.user.zipcode}}"{% endif %}>
            </div>
            <div class="margin-top">
                <input type="submit" value="Confirmer" class="button-product">
            </div>
        </form>
    </div>
{% endblock %}