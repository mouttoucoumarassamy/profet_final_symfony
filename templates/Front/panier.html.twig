{% extends 'front/base.html.twig' %}

{% block main %}
    <div class="container">
        {% if items == [] %}
            <div class="cart-empty">
                <p>Panier vide</p>
                <p>Remplissez-le !</p>
                <p>Et VITE !!!!!!!</p>
            </div>
            {% else %}
                {% set n = 0 %}
                {% set p = 0 %}
                {% for product in items %}
                    {% set n = n + product.quantity * 1  %}
                    {% set p = p + product.product.price * product.quantity  %}
                        <div class="row cart-div">
                            <div class="col-20">
                                <img src="{{ asset('img/media/' ~ product.product.media[0].src) }}" alt="">
                            </div>
                            <div class="col-20">
                                <h2>Produit :</h2>
                                <h2>{{ product.product.name }}</h2>
                            </div>
                            <div class="col-20">
                                <h2>Prix : </h2>
                                <h2>{{ product.product.price }} €</h2>
                            </div>
                            <div class="col-20">
                                <h2>Quantité :</h2>
                                <h2>{{ product.quantity }}</h2>
                            </div>
                            <div class="col-20">
                                <a href="{{ path('delete_cart', {'id' : product.product.id}) }}" class="delete-product-cart">
                                    Supprimer
                                </a>
                            </div>
                        </div>
                {% endfor %}
            <div class="row cart-div">
                <div class="col-30">
                    <h2>Nombre d'article :</h2>
                    <h2>{{ n }}</h2>
                </div>
                <div class="col-30">
                    <h2>Prix total :</h2>
                    <h2>{{ p }} €</h2>
                </div>
                <div class="col-30">
                    <a href="{{ path('info_cart') }}">Confirmer</a>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}


{% block script %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">	</script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}