{% extends 'front/base.html.twig' %}

{% block link %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block main %}
    {# {{ form(userForm) }} #}

    {{ form_start(userForm) }}
    <div class="margin-top">
        {{ form_label(userForm.name, 'Votre nom de famille :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.name, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre nom'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.firstname, 'Votre prénom :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.firstname, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre prénom'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.email, 'Votre adresse email :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.email, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre adresse email'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.adress, 'Votre adresse :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.adress, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre adresse'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.city, 'Ville où vous habitez :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.city, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre ville'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.zipcode, 'Le code postal de votre ville :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.zipcode, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre code postal'}}) }}
    </div>
    <div class="margin-top">
        {{ form_label(userForm.password, 'Votre mot de passe :', {'label_attr' : {'class'  : 'input'}}) }}
        {{ form_widget(userForm.password, {'attr' : {'class'  : 'input marginput', 'placeholder' : 'Votre mot de passe'}}) }}
    </div>
    <div class="margin-top">
        {{ form_widget(userForm.submit, {'attr' : {'class'  : 'button margin-button'}, 'label': 'Enregister'}) }}
    </div>


    {{ form_end(userForm) }}
{% endblock %}